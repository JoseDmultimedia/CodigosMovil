<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="164dp"
        android:layout_y="233dp"
        android:text="Codigo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/guardar"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_x="52dp"
        android:layout_y="122dp"
        android:text="GUARDAR" />

    <Button
        android:id="@+id/scan"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_x="53dp"
        android:layout_y="49dp"
        android:text="ESCANEAR" />

    <Button
        android:id="@+id/ver"
        android:layout_width="124dp"
        android:layout_height="wrap_content"
        android:layout_x="222dp"
        android:layout_y="49dp"
        android:text="VER" />

    <Button
        android:id="@+id/eliminar"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_x="221dp"
        android:layout_y="124dp"
        android:text="ELIMINAR" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="165dp"
        android:layout_y="350dp"
        android:text="Nombre" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="164dp"
        android:layout_y="474dp"
        android:text="Telefono" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="178dp"
        android:layout_y="604dp"
        android:text="Email" />

    <EditText
        android:id="@+id/eCodigo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="83dp"
        android:layout_y="272dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/eNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="83dp"
        android:layout_y="395dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/eTelefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="86dp"
        android:layout_y="520dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/eEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="80dp"
        android:layout_y="642dp"
        android:ems="10"
        android:inputType="textPersonName" />

</AbsoluteLayout>